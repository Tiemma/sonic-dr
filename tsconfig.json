{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "build",
    "removeComments": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "types": ["node"],
    "typeRoots": ["./@types", "node_modules/@types"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
